@using ElectronicSignatureService.Entities

@model Document

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <h2>Document - @Model.Name</h2>
        <div><small><b>ID:</b> @Model.ID</small></div>
        <div><small><b>Blockchain Mapping ID:</b> @Model.BlockchainMappingID</small></div>
        <div><small><b>Filename:</b> @Model.Filename</small></div>
        <div><small><b>Hash:</b> @Model.HashCode</small></div>
        <div><small><b>Timestamp:</b> @Model.TimeStamp.ToString()</small></div>
        <br />

        <h4>Signatures</h4>

        <ul>
        @for(int slot = 1; slot <= Model.SignaturePlaceholderCount; slot++)
        {
             <li><a href="@Url.Action("Signature","Document",new { id = Model.ID, slot = slot })">Slot #@slot</a></li>
        }
        </ul>

    </div>
</div>