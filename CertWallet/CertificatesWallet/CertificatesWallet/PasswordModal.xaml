<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CertificatesWallet.PasswordModal"
             Title="Password">
    <StackLayout Padding="{OnPlatform iOS='30,60,30,30', Default='30'}" Spacing="30" VerticalOptions="Center">
        <Image Grid.Row="4"
                Source="lock.png"
                WidthRequest="80"
                HeightRequest="80"
                HorizontalOptions="Center" />
        <Label Text="Password:"
                FontSize="20"
                HorizontalOptions="FillAndExpand" />
        <Frame>
            <Entry x:Name="passwordEntry"
                    Placeholder="Password" Keyboard="Text" IsPassword="True" />
        </Frame>
        <Button 
                Text="OK"
                FontAttributes="Bold"
                HorizontalOptions="Fill" Clicked="Button_Clicked" />
        <Button 
                Text="Cancel"
                FontAttributes="Bold"
                HorizontalOptions="Fill" Clicked="Button_Clicked_1" />
    </StackLayout>
</ContentPage>