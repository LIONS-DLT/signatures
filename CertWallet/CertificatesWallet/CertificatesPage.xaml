<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CertificatesWallet.CertificatesPage"
             Title="Certificates">

    <ScrollView>
        <VerticalStackLayout
            x:Name="layout"
            Spacing="25"
            Padding="30,20"
            VerticalOptions="Center">

            <Button
                Text="+ Add Certificate (*.p12, *.pfx)"
                Clicked="OnAddClick"
                Padding="20"
                HorizontalOptions="Fill" />
            <Button
                Text="+ Create Self Signed"
                Clicked="OnCreateClick"
                Padding="20"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>